<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
</head>

	<body>
		<form  class="form" action="/shoppingCart"  method="post">
		<p>Current items in shopping cart</p>
		{{#each item}}
		<p>{{item}}</p>
		<button onclick="add(item)">Add to shopping cart</button>
		<button onclick="decrement(item)">Decrement by one ticket</button>
		<button onclick="remove(item)">Remove ticket</button>
		{{/each}}
        </form>
	</body>
</html>